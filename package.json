  "author": "codeleague <virtualjoel@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint 'src/**/*.{js,ts}' --quiet --fix",
    "lint-ci": "eslint 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "test": "jest",
    "build": "tsc --project tsconfig.build.json",
    "dev:dotnetbuild": "nodemon --inspect=5858 --config ./nodemon.json -- --url=https://github.com/codeleague/codecoach.git --token=placeyourtokenhere --pr=15 --type=dotnetbuild --buildLogFile=./sample/dotnetbuild/build.content --output=./tmp/dotnetbuild.json",
    "dev:msbuild": "nodemon --inspect=5858 --config ./nodemon.json -- --url=https://github.com/codeleague/codecoach.git --token=placeyourtokenhere --pr=15 --type=msbuild --buildLogFile=./sample/msbuild/build.log --output=./tmp/dotnetbuild.json",
    "dev:tslint": "nodemon --inspect=5858 --config ./nodemon.json -- --url=https://github.com/codeleague/codecoach.git --token=placeyourtokenhere --pr=15 --type=tslint --buildLogFile=./sample/tslint/tslint-output.json --output=./tmp/tsbuild.json",
    "prepublishOnly": "yarn build"
  },
  "bin": {
    "codecoach": "dist/app.js"
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@octokit/types": "^6.1.1",
    "@types/jest": "^26.0.18",
    "@types/node": "^14.14.11",
    "@types/rimraf": "^3.0.0",
