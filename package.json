    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-sonarjs": "^0.5.0",
    "jest": "^26.4.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@octokit/core": "^3.2.4",
    "@octokit/rest": "^18.0.12",
    "rimraf": "^3.0.2",
    "slash": "^3.0.0",
