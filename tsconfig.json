{
  "forceConsitentCasingInFileNames": true,
  "noImplicitReturns": true,
  "strict": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "lib": ["ES2019"],
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strictNullChecks": true
  },
  "lib": ["es2019"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
